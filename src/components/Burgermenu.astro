<header class="class_header">
  <nav class="menubar">
    <div class="logo" class="left_row">
      <a href="/index.html"
        ><img class="logo" src="/imgs/logo.png" alt="burger" /></a
      >
    </div>
    <div class="right_row">
      <a href="/news.html" class="visible_tab" id="news">News</a>
      <a href="/program.html" class="visible_tab" id="program">Program</a>
      <a href="/tickets.html" class="visible_tab" id="tickets">Tickets</a>
      <div class="ikon_holder">
        <div class="menu_ikon">
          <div class="line1"></div>
